{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "outDir": "./build",
        "lib": [
            "Esnext.AsyncIterable",
            "ESNext.Array",
            "ESNext.AsyncIterable",
            "ESNext.BigInt",
            "ESNext.Intl",
            "ESNext.Promise",
            "ESNext.String",
            "ESNext.Symbol",
            "ESNext.WeakRef",
            "DOM"
        ],
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "incremental": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
}